{
  "name": "Magic Card Zoom",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Identify Magic: The Gatheringâ„¢ cards in YouTube videos",
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "page_action": {
    "default_icon": "icon128.png",
    "default_title": "MagicCardZoom",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "*.gif",
    "*.png"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
